{% extends 'base.html.twig' %}

{% block title %}
	Hello BoardController!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/board.css') }}">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/board.js') }}"></script>
{% endblock %}

{% block body %}

	<div class="container">

		<div class="d-flex justify-content-around">
			{% for bank_account in app.user.bankAccounts %}
				{% set class = "bg-danger" %}
				{% if bank_account.currentValue > 0 %}
					{% set class = "bg-success" %}
				{% endif %}

				<div class="text-center">
					<div class="fw-bold">{{bank_account}}</div>
					<hr>
					<div class="p-1 rounded {{class}}">{{bank_account.currentValue}}
						€</div>

				</div>

			{% endfor %}

		</div>

		<div class="container">
			<div class="fs-3 my-3">Récapitulatif</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Mois</th>
						<th>Montant</th>
						<th>Cloturé</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for month in months %}
						<tr>
							<td>
								<button class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                </button>
							</td>
							<td>{{month.name}}</td>
							<td>{{month.amount}}
								€</td>
							<td>
								{% if month.closed is not defined %}
									<i class="fas fa-check-circle text-success"></i>
								{% endif %}

							</td>
							<td>
                                <button class="btn btn-warning">
                                    <i class="fas fa-lock"></i>
                                </button>
                            </td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>


		<div class="d-flex">
			<div class="fs-1 my-3 ">{{ month }}
				{{year}}</div>


		</div>


		<hr>
		<div
			class="d-flex">
			{# Balance container #}
			<div class="card bg-dark mb-3">
				<div class="card-header fs-4">
					Balance
				</div>
				<div class="card-body">
					<table>
						<thead>
							<tr>
								<th>
									Dépenses
								</th>
								<th>
									Revenus
								</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									<div class="bg-danger rounded">
										{{ balance.expenses }}
										€
									</div>
								</td>
								<td>
									<div class="bg-success rounded">
										{{ balance.incomes }}
										€
									</div>
								</td>
							</tr>
							<tr>
								<td colspan="2">
									<div class="bg-warning text-dark rounded text-center fw-bold">
										{{ balance.total }}
										€
									</div>
								</td>
							</tr>
						</tbody>
					</table>
				</div>

			</div>

		</div>

		<hr>

		<div>
			<h3>Dépenses partagés</h3>
			<table class="table text-white align-middle text-center">
				<thead>
					<tr>
						<th>Utilisateurs</th>
						<th>Montant Payée</th>
						<th>Montant Partagé</th>
						<th>Différenciel</th>
					</tr>
				</thead>
				<tbody>
					{% for item in sharesByUser %}
						<tr>
							<td>{{ item.user }}</td>
							<td>{{ item.amount }}
								€</td>
							<td>{{ item.shares }}
								€</td>
							<td class="d-flex justify-content-center">
								{% set difference = item.amount - item.shares %}
								{% set class = "bg-danger" %}
								{% if difference > 0 %}
									{% set class = "bg-success" %}
								{% endif %}

								<div class="{{class}} rounded w-50 text-center">{{ difference }}
									€</div>
							</td>
						</tr>

					{% else %}
						<tr>
							<td colspan="4" class="text-center">Aucune dépense partagée</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<hr>

			<h3>Details</h3>

			<div class="table-responsive">


				<table class="table  text-white">
					<thead>
						<tr>
							<th></th>
							<th>Date</th>
							<th>Utilisateur</th>
							<th>Montant</th>
							<th>Libellé</th>
							<th>Type</th>

						</tr>
					</thead>
					<tbody>
						{% for item in shares  %}
							<tr>
								<td>
									<a href="{{ path('ligne_show',{id: item.id}) }}" class="btn btn-dark">Voir</a>
								</td>
								<td>{{ item.date | date("d/m/Y") }}</td>
								<td>{{ item.username}}</td>
								<td>{{ item.amount }}
									€</td>
								<td>{{ item.libelle }}</td>
								<td>{{item.type}}</td>

							</tr>

						{% else %}
							<tr>
								<td colspan="6" class="text-center">Aucune dépense partagée</td>
							</tr>
						{% endfor %}


					</tbody>

				</table>
			</div>
			<hr>
		</div>

	{% endblock %}
