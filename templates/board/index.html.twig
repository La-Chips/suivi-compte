{% extends 'base.html.twig' %}

{% block title %}
    Hello BoardController!
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/board.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/board.js') }}"></script>
    {% endblock %}

    {% block body %}

    <div class="container">

    <div class="d-flex">
<div class="fs-1 my-3 ">{{ month }} {{year}}</div>


</div>


<hr>
            <div class="d-flex">
                {# Balance container #}
                <div class="card bg-dark mb-3">
                    <div class="card-header fs-4">
                        Balance
                    </div>
                    <div class="card-body">
                        <table>
                            <thead>
                                <tr>
                                    <th>
                                        Dépenses
                                    </th>
                                    <th>
                                        Revenus
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="bg-danger rounded">
                                            {{ balance.expenses }} €
                                        </div>
                                    </td>
                                    <td>
                                        <div class="bg-success rounded">
                                            {{ balance.incomes }} €
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <div class="bg-warning text-dark rounded text-center fw-bold">
                                            {{ balance.total }} €
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>

                    </div>

                </div>

            <hr>

                <div>
                <h3>Dépenses partagés</h3>
                    <table class="table text-white align-middle">
                    <thead>
                        <tr>
                            <th>Utilisateurs</th>
                            <th>Montant Payée</th>
                            <th>Montant Partagé</th>
                            <th>Différenciel</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in sharesByUser %}
                            <tr>
                                <td>{{ item.user }}</td>
                                <td>{{ item.amount }} €</td>
                                <td>{{ item.shares }} €</td>
                                <td>
                                    {% set difference = item.amount - item.shares %}
                                    {% set class = "bg-danger" %}
                                    {% if difference > 0 %}
                                        {% set class = "bg-success" %}
                                    {% endif %}

                                    <div class="{{class}} rounded w-25 text-center">{{ difference }} €</div>
                                 </td>
                            </tr>

                            {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Aucune dépense partagée</td>
                            </tr>
                        {% endfor %}
                
                </table>
                    <hr>

                        <h3>Details</h3>
                    <table class="table  text-white">
                    <thead><tr>
                        <th></th>
                        <th>Date</th>
                        <th>Utilisateur</th>
                        <th>Montant</th>
                        <th>Libellé</th>
                        <th>Type</th>
                    
                    </tr></thead>
                    <tbody>
                        {% for item in shares  %}
                            <tr>
                                <td>
                                    <a href="{{ path('ligne_show',{id: item.id}) }}" class="btn btn-dark">Voir</a>
                                </td>
                            <td>{{ item.date | date("d/m/Y") }}</td>
                            <td>{{ item.username}}</td>
                                <td>{{ item.amount }} €</td>
                                <td>{{ item.libelle }}</td>
                                <td>{{item.type}}</td>
                      
                            </tr>

                            {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucune dépense partagée</td>
                            </tr>
                        {% endfor %}
                    

                    </tbody>
                
                </table>

                <hr>
                </div>

            {% endblock %}
            