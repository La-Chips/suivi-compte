{% extends 'base.html.twig' %}

{% block title %}Particulier{% endblock %}

{% block body %}
    <div class="container">

    </div>
    <h1>Particulier</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ particulier.id }}</td>
            </tr>
            <tr>
                <th>Adresse mail</th>
                <td>{{ particulier.mail }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ particulier.rue }}</td>
            </tr>
            <tr>
                <th>Code postale</th>
                <td>{{ particulier.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ particulier.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ particulier.pays }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ particulier.telephone }}</td>
            </tr>
            <tr>
                <th>Civilité</th>
                <td>{{ particulier.civilite }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ particulier.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ particulier.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark m-2" href="{{ path('compagny') }}">Retour</a>

    <a class="btn btn-success m-2" href="{{ path('particulier_edit', {'id': particulier.id}) }}">Modifier</a>

    {{ include('particulier/_delete_form.html.twig') }}
{% endblock %}
