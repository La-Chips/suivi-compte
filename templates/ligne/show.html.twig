{% extends 'base.html.twig' %}

{% block title %}Ligne n°{{ ligne.id }} - Tech&Dev{% endblock %}

{% block body %}
    <h1>Ligne n°{{ ligne.id }}</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ligne.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ligne.date ? ligne.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ ligne.libelle }}</td>
            </tr>
            <tr>
                <th>Libelle_2</th>
                <td>{{ ligne.libelle2 }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ ligne.montant }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ligne.type }}</td>
            </tr>
        </tbody>
    </table>
   <div class="btn-group-vertical">
    <a class="btn btn-dark m-2 rounded"href="{{ path('ligne_index') }}">Retour</a>

    <a class="btn btn-success m-2 rounded" href="{{ path('ligne_edit', {'id': ligne.id}) }}">Modifier</a>

    {{ include('ligne/_delete_form.html.twig') }}
   </div>

{% endblock %}
